<Window x:Class="CablePuller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CablePuller"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="txtPDFpath" Background="AliceBlue" Padding="5,0,5,0"  Text="Select PDF file" VerticalContentAlignment="Center" Grid.Column="0"/>
            <Button Name="btnBrowse" Click="btnBrowse_Click" Content="Browse" Grid.Column="1"/>

        </Grid>
        
        <Image Name="pdfImage" Stretch="UniformToFill" Grid.Row="1"/>

    </Grid>
</Window>
